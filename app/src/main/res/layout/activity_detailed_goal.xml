<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    android:orientation="vertical"
    tools:context=".DetailedGoalActivity"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">
        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표제목"
            android:textSize="50sp"
            android:fontFamily="@font/binggreabold"
            android:textColor="#1C0400"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작날짜 : "
            android:textSize="38sp"
            android:fontFamily="@font/binggreabold"
            android:textColor="#1C0400"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textSize="32sp"
            android:fontFamily="@font/binggrea"
            android:textColor="#1C0400"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표날짜 : "
            android:textSize="38sp"
            android:fontFamily="@font/binggreabold"
            android:textColor="#1C0400"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/finalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000-00-00"
            android:textSize="32sp"
            android:fontFamily="@font/binggrea"
            android:textColor="#1C0400"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/dateupdate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="수정"
            android:textSize="20sp"
            android:fontFamily="@font/binggreabold"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#C37132"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_alarm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 : "
                android:textSize="38sp"
                android:fontFamily="@font/binggreabold"
                android:textColor="#1C0400"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:00"
                android:textSize="32sp"
                android:fontFamily="@font/binggrea"
                android:textColor="#1C0400"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/timeupdate"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="수정"
                android:textSize="20sp"
                android:fontFamily="@font/binggreabold"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#C37132"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/goalupdate"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C37132"
        android:fontFamily="@font/binggreabold"
        android:text="목표 수정"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/goalFinish"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#773800"
        android:fontFamily="@font/binggreabold"
        android:text="목표 완수"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:backgroundTint="#C30303"
        android:fontFamily="@font/binggreabold"
        android:text="삭제"
        android:textSize="20sp"
        android:visibility="invisible"/>

</LinearLayout>